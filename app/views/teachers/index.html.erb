<p id="notice"><%= notice %></p>

<h1>Teachers</h1>



<div class="row">
    <% @teachers.each do |teacher| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h2><%= teacher.name %></h2>
         <p><%= teacher.class %></p>

         <div class="btn-group">
          <%= link_to 'Show', teacher, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-success" %>
          <%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Teacher', new_teacher_path, class: "btn btn-primary" %>
